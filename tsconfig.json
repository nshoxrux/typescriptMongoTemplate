{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",                               
    "rootDir": "./src",                                 
    "sourceMap": true,
    "outDir": "./build",                                
    "removeComments": true,                        
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                   
    "noImplicitAny": true,
    "skipLibCheck": true                             
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
